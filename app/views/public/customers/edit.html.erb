<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto">

      <h1>会員情報編集</h1>
      
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <div class='row form-group mt-3'>
          <div class='col-1'></div>
          <div class='col-2'>
            氏名
          </div>
          <div class='col-6'>
            <%= f.text_field :family_name %>
            <%= f.text_field :first_name %>
          </div>
        </div>
      
         <div class='row form-group mt-3'>
          <div class='col-1'></div>
          <div class='col-2'>
            フリガナ
          </div>
          <div class='col-6'>
            <%= f.text_field :family_name_kana %>
            <%= f.text_field :first_name_kana %>
          </div>
        </div>
      
         <div class='row form-group mt-3'>
          <div class='col-1'></div>
          <div class='col-2'>
            郵便番号
          </div>
          <div class='col-6'>
            <%= f.text_field :post_code %>
          </div>
        </div>
      
         <div class='row form-group mt-3'>
          <div class='col-1'></div>
          <div class='col-2'>
            住所
          </div>
          <div class='col-6'>
            <%= f.text_field :address %>
          </div>
        </div>
      
         <div class='row form-group mt-3'>
          <div class='col-1'></div>
          <div class='col-2'>
            電話番号
          </div>
          <div class='col-6'>
            <%= f.telephone_field :phone_number %>
          </div>
        </div>
         <div class='row form-group mt-3'>
          <div class='col-1'></div>
          <div class='col-2'>
            メールアドレス
          </div>
          <div class='col-6'>
            <%= f.email_field :email %>
          </div>
        </div>
      </div>
    </div>
    <div class="row mx-auto">
      <div class="col-md-2"></div>
      <div class="col-md-3">
        <div class="form-group">
          <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
        </div>
      <% end %>
      </div>
       <div class="col-md-3">
        <%= link_to customers_check_path do %>
         <div class="btn btn-sm btn-danger">退会する</div>
        <% end %>
      </div>
    </div>
</div>