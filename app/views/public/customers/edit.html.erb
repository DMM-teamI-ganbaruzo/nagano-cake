<h1>会員情報編集</h1>

<%= form_with model: @customer, url: public_customer_path, method: :patch do |f| %>


  <div class="field">
    氏名
    <%= f.text_field :family_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    フリガナ
    <%= f.text_field :family_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    郵便番号
    <%= f.text_field :post_code %>
  </div>

  <div class="field">
    住所
    <%= f.text_field :address %>
  </div>

  <div class="field">
    電話番号
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="field">
    メールアドレス
    <%= f.email_field :email %>
  </div>

<% end %>