<div class='container align-items-center'>
  <div class='row mt-3'>
    <div class='col'></div>
    <div class='col-10'>

<div class='row m-3'>
  <h4>マイページ</h4>
</div>

<div class='row form-group'>
  <div class='col-2'>
    <h5>登録情報</h5>
  </div>
  <div class='col-2'>
    <%= link_to "編集する", customers_information_edit_path(@customer.id), class: "btn btn-success form-control" %>
  </div>
</div>

<table class = 'table table-bordered'>
  <tr>
    <td>氏名</td>
    <td><%= @customer.family_name + "　" + @customer.first_name %></td>
  </tr>
  <tr>
    <td>カナ</td>
    <td><%= @customer.family_name_kana + "　" + @customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.post_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.phone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
</table>


<div class='row form-group'>
  <div class='col-2'>
    <h5>配送先</h5>
  </div>
  <div class='col-2'>
    <%= link_to "一覧を見る", shipping_addresses_path(current_customer), class: "btn btn-primary form-control" %>
  </div>
</div>

<div class='row form-group'>
  <div class='col-2'>
    <h5>注文履歴</h5>
  </div>
  <div class='col-2'>
    <%= link_to "一覧を見る", orders_path(@customer.id), class: "btn btn-primary form-control" %>
  </div>
</div>

<div> </div>


      </div>
    <div class='col'></div>
  </div>
</div>

