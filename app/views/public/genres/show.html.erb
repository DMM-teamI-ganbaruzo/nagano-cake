<div class="container">
  <div class="row">
    <div class="col-md-10">

<div class="item-index-box">

    <!-- ジャンル選択のサイドバー -->
    <%= render 'public/items/genres_sidebar', genres: @genres %>
    <!-- ジャンル選択のサイドバー -->
    <div class="item-index">
    <h3><%= @genre.name %>一覧</h3>
        <table>
          <tbody>
            <% @genre.items.each do |item| %>
              <tr class="item-box">
                <td>
                <%= link_to item_path(item.id) do %>
                  <% if item.image.present? %>
                    <%= image_tag item.image, width: 'auto', height: '75px' %>
                  <% else %>
                    <%= image_tag 'no_image.jpg', width: 'auto', height: '75px'  %>
                  <% end %>
                <% end %>
                </td>
                  <td><%= item.name %></td>
                  <td>¥<%= item.with_tax_price.to_s(:delimited) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>