<div class="row">
  <div class="col-8 mx-auto">

<table class="table table-hover table-inverse">

<!-- ユーザーに確認してもらうための表示です -->
<% @cart_items.each do |cart| %>
  <%= cart.item.name %> <!-- 商品名 -->
  <%= (cart.item.price).to_s(:delimited) %>　<!-- 金額 -->
  <%= cart.quantity %> <!-- 個数 -->
  <%= (cart.item.price*cart.quantity).to_s(:delimited) %> <!-- 小計 -->
<% end %>
  <table>
    <tr>
      <td>合計金額</td>
      <td><%= @total.to_s(:delimited) %></td>
    </tr>
  </table>
<p>ご請求金額</p>
<%= @total.to_s(:delimited) %> <!-- お買い物の合計金額 -->
<p><strong>支払方法</strong></p>
<%= @order.payment_method_i18n %><!--"_i18n"で日本語化-->
<p><strong>お届け先</strong></p>
〒<%= @order.shipping_post_code %>
<%= @order.shipping_address %><br>
<%= @order.shipping_address_name %>

<!-- ユーザーには注文確定ボタンだけ表示します -->
<%= form_with model: @order, url:orders_path, local: true do |f| %>
  <%= f.hidden_field :shipping_address_name %>
  <%= f.hidden_field :shipping_address %>
  <%= f.hidden_field :total_payment, value: @total %>
  <%= f.submit "注文を確定する", class: 'btn btn-success' %>
<% end %>

