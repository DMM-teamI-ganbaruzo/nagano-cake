注文履歴一覧

<table class="table table-bordered">
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td>
      〒<%= order.shipping_post_code %> <br>
      <%= order.shipping_address %> <br>
      <%= order.shipping_address_name %>
    </td>
    <td>
      <% order.order_details do |order_detail| %>
        <%= Item.find(order_detail.item_id).name %>
      <% end %>
    </td>
    <td>
      <%= number_to_currency(order.total_payment) %>
    </td>
    <td>
      <%= order.order_status_i18n %>
    </td>
    <td>
      <%= link_to "表示する", order_path(order.id) %>
    </td>
  </tr>
  <% end %>

</table>

