
<%= render 'genres_sidebar', genres: @genres %>


商品一覧
<div class="row">
  <% @items.each do |item| %>
    <div class="col-md-3">
      <%= link_to item_path(item.id) do %>
        <% if item.image.present? %>
          <%= image_tag item.image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image.jpg' %>
        <% end %>
      <% end %>
      <br><%= item.name %>
      <br>¥<%= item.with_tax_price.to_s(:delimited) %>
    </div>
  <% end %>
</div>
