<div class='contaioner'>
      <%= form_with model: @shipping_address,local:true do |f| %>
      <div class='row form-group mt-3'>
	    <div class='col-1'></div>
	    <div class='col-2'>
          <%= f.label :post_code, "郵便番号（ハイフンなし）" %>
      </div>
        <div class='col-6'>
          <%= f.text_field :post_code, class: 'form-control book_title' %>
        </div>
      </div>
        <div class="row form-group mt-3">
          <div class='col-1'></div>
	        <div class='col-2'>
          <%= f.label :address, "住所" %>
          </div>
          <div class='col-6'>
          <%= f.text_area :address, class: 'form-control book_body' %>
          </div>
        </div>
        <div class="row form-group mt-3">
        <div class='col-1'></div>
	      <div class='col-2'>
          <%= f.label :address_name, "宛名" %>
        </div>
        <div class='col-4'>
          <%= f.text_field :address_name, class: 'form-control book_body' %>
        </div>
        <div>
          <%= f.hidden_field :customer_id, :value => current_customer.id %>
        </div>
        <div class="col-2">
          <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>  
  </div>
</div>