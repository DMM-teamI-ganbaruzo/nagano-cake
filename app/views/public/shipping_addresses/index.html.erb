<%= form_with model: @shipping_address,local:true do |f| %>
  <div class="form-group">
    <%= f.label :post_code, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :post_code, placeholder: '0000000', class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_area :address, placeholder: "東京都渋谷区代々木神園町0-0", class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.label :address_name, "宛名" %>
    <%= f.text_field :address_name, placeholder: "令和道子", class: 'form-control book_body' %>
  </div>

  <div>
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
  </div>

  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>


