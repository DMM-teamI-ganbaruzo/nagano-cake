<%= form_with model: @shipping_address, url: shipping_addresses_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :post_code, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :post_code, placeholder: '0000000', class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_area :address, placeholder: "東京都渋谷区代々木神園町0-0", class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.label :address_name, "宛名" %>
    <%= f.text_field :address_name, placeholder: "令和道子", class: 'form-control book_body' %>
  </div>
  <div>
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  </div>
<% end %>


<table class="table table-bordered address-table">
			<thead>
				<tr class="table-head" style="background-color:#F5F5F5;">
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
					<th>&nbsp;</th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<% @shipping_addresses.each do |shipping_address|  %>
					<tr>
						<td><%= shipping_address.post_code %></td>
						<td><%= shipping_address.address %></td>
						<td><%= shipping_address.address_name %></td>
						<td><%= link_to "編集する", edit_shipping_address_path(shipping_address.id),  class: "btn btn-success" %>
								<%= link_to "削除する", shipping_address_path(shipping_address.id),  class: "btn btn-danger", method: :delete %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
