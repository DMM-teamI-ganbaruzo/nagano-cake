<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <div class="row">
        <div class="">
          <a class="navbar-brand" href="/"><span>NaganoCake</span></a>
        </div>
        <div class="　text-align: right">
          <% if  customer_signed_in? %>
            <h5 class='text-light'>ようこそ、<%= current_customer.family_name %>さん！</h5>
          <% end %>
        </div>
        <div class="">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if  customer_signed_in? %>
              <li>
                <%= link_to customers_my_page_path(current_customer.id),class: 'nav-link text-light' do %>
                  <i class="fas fa-user"></i> <span class="font-size: small">マイページ
                <% end %>
              </li>
              <li>
                <%=  link_to items_path,class: 'nav-link text-light' do %>
                  <i class="fas fa-gifts"></i> <span class="font-size: small">商品一覧
                <% end %>
              </li>
              <li>
                <%=  link_to cart_items_path ,class: 'nav-link text-light' do %>
                  <i class="fas fa-shopping-cart"></i> <span class="font-size: small">カート
                <% end %>
              </li>
              <li>
                <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-light' do %>
                  <i class="fas fa-sign-out-alt"></i> <span class="font-size: small">ログアウト
                <% end %>
              </li>
              <li>
                <%= render 'public/searches/search', items: @items %>
              </li>
            <% else %>
              <li>
                <%= link_to about_path,class: 'nav-link text-light' do %>
                  <i class="fas fa-home"></i> <span class="font-size: small">About
                <% end %>
              </li>
              <li>
                <%= link_to items_path,class: 'nav-link text-light' do %>
                  <i class="fas fa-gifts"></i> <span class="font-size: small">商品一覧
                <% end %>
              </li>
              <li>
                <%= link_to new_customer_registration_path,class: 'nav-link text-light' do %>
                  <i class="fas fa-user-plus"></i> <span class="font-size: small">新規登録
                <% end %>
              </li>
              <li>
                <%= link_to new_customer_session_path ,class: 'nav-link text-light' do %>
                  <i class="fas fa-sign-in-alt"></i> <span class="font-size: small">ログイン
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>