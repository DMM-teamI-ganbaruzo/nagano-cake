<div class='container align-items-center'>
  <div class='row'>
    <div class='col-1'></div>
    <div class='col-10 px-auto'>

      <h4>新規会員登録</h4>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
      <table>
        <tr>
          <td>名前</td>
          <td><%= f.label :"(姓)" %></td>
          <td><%= f.text_field :family_name, autofocus: true, placeholder: "令和", class: "form-control" %></td>
          <td><%= f.label :"(名)" %></td>
          <td><%= f.text_field :first_name, autofocus: true, placeholder: "道子", class: "form-control" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.label :"(セイ)" %></td>
          <td><%= f.text_field :family_name_kana, autofocus: true, placeholder: "レイワ", class: "form-control" %></td>
          <td><%= f.label :"(メイ)" %></td>
          <td><%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :"メールアドレス" %></td>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.text_field :post_code, autofocus: true, placeholder: "0000000", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :"住所" %></td>
          <td></td>
          <td><%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %></td>
        </tr>
        <tr>
          <td><%= f.label :"電話番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.telephone_field :phone_number, autofocus: true, placeholder: "0000000000", class: "form-control" %></td>
        </tr>
        <tr>
          <td>
            <%= f.label :"パスワード" %>
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
            <% end %>
          </td>
          <td></td>
          <td>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :"パスワード(確認用)" %></td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </table>
      <% end %>

      <h4>既に登録済みの方</h4>
      <%= render "public/shared/links" %>

    </div>
  </div>
</div>
