<h5>ログイン</h5>


<div class='row'>
  <div class='col'></div>
  <div class='col-11'>
<div>会員の方はこちらからログイン</div>

<%= form_with model: @customer, url: customer_session_path do |f| %>
<div class='row form-group mt-3'>
  <div class='col-1'></div>
  <div class='col-2'>
    <%= f.label :"メールアドレス" %>
  </div>
  <div class='col-6'>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
  </div>
  <div class='col-2'></div>
</div>
<div class='row form-group'>
  <div class='col-1'></div>
  <div class='col-2'>
    <%= f.label :"パスワード" %>
  </div>
  <div class='col-6'>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>
  <div class='col'></div>
</div>
<div class='row form-group'>
  <div class='col-3'></div>
  <div class='col'>
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
</div>
<% end %>

<div>会員登録がお済みでない方</div>
