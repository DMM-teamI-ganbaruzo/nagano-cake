<div class='container align-items-center'>
  <div class='row align-items-center'>
    <div class='col'></div>

    <div class='col-10'>


<div>ログイン</div>

<div>会員の方はこちらからログイン</div>




<%= form_with model: @customer, url: customer_session_path do |f| %>
<div class='row'>
  <div class='col-4'>
    <%= f.label :"メールアドレス" %>
  </div>
  <div class='col-8'>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
  </div>
</div>
<div class='row'>
  <div class='col-4'>
    <%= f.label :"パスワード" %>
  </div>
  <div class='col-8'>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>
</div>
<div class='row'>
  <div class='col-4'></div>
  <div class='col-8'>
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
</div>
<% end %>

<div>会員登録がお済みでない方</div>


<%= render "public/shared/links" %>

      </div>
    <div class='col'></div>
  </div>
</div>
