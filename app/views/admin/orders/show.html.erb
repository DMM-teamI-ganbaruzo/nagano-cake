<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>注文履歴一覧</h2>

<dl>
	<dt>購入者</dt>
  	<dd><%= @orader.custmer_id %></dd>
	<dt>注文日</dt>
	  <dd><%= @order.created_at %></dd>
	<dt>配送先</dt>
	  <dd><%= @order.shipping_post_code, @order.shipping_address, @order.shipping_address_name %></dd>
	<dt>支払い方法</dt>
	  <dd><%= @rorder.payment_method %></dd>
	<dt>注文ステータス</dt>
	  <dd><%= @order.orade_status %></dd>
      <%= f.select :orade_status, options_from_collection_for_select(Order.all, :order_status_was) %>
      <div class="form-group">
        <input type="submit" name="commit" value="更新" class="btn btn-secondary" data-disable-with="Update User">
      </div>
</dl>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
   <tr>
    <td><%= link_to order.order_detail.item_id.name, "admin_custmer_path" %></td>
    <td><%= order.order_detail.purchase_price %></td>
    <td><%= order.order_detail. quantity%></td>
    <td><%= 足し算 %></td>
    <td><%= order.order_detail.production_status %></td>
      <%= f.select :production_status, options_from_collection_for_select(OrderDetail.all, :production_status_was) %>
      <div class="form-group">
        <input type="submit" name="commit" value="更新" class="btn btn-secondary" data-disable-with="Update User">
      </div>
   </tr>
  <% end %>
  </tbody>
</table>

<dl>
	<dt>商品合計</dt>
  	<dd><%= @orader.total_payment %></dd>
	<dt>送料</dt>
	  <dd><%= @order.shipping_charge %></dd>
	<dt>請求金額合計</dt>
	  <dd><%= t_i.total_payment + t_i.shipping_charge %></dd>
</dl>

    </div>
  </div>
</div>