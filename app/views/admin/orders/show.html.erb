<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>注文履歴詳細</h2>

<dl>
	<dt>購入者</dt>
  	<dd><%= @order.customer_id %></dd>
	<dt>注文日</dt>
	  <dd><%= @order.created_at %></dd>
	<dt>配送先</dt>
	  <dd><%= @order.shipping_post_code + @order.shipping_address + @order.shipping_address_name %></dd>
	<dt>支払い方法</dt>
	  <dd><%= @order.payment_method %></dd>
	<dt>注文ステータス</dt>
	  <dd><%= @order.order_status %></dd>
       <!--select :order_status, options_from_collection_for_select(Order.all, :order_status) -->
      <div class="form-group">
        <input type="submit" name="commit" value="更新" class="btn btn-secondary" data-disable-with="Update User">
      </div>
</dl>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>

  <tbody>
  <% @order_details.each do |order_detail| %>
   <tr>
    <td><%= Item.find(order_detail.item_id).name %></td>
    <td><%= order_detail.purchase_price %></td>
    <td><%= order_detail.quantity %></td>
    <td><%= order_detail.purchase_price * order_detail.quantity %></td>
    <td><%= order_detail.production_status %></td>
      <!--f.select :production_status, options_from_collection_for_select(OrderDetail.all, :production_status_was)-->
      <div class="form-group">
        <input type="submit" name="commit" value="更新" class="btn btn-secondary" data-disable-with="Update User">
      </div>
   </tr>
  <% end %>
  </tbody>
</table>

<dl>
	<dt>商品合計</dt>
  	<dd><%= @order.total_payment - @order.shipping_charge %></dd>
	<dt>送料</dt>
	  <dd><%= @order.shipping_charge %></dd>
	<dt>請求金額合計</dt>
	  <dd><%= @order.total_payment %></dd>
</dl>

    </div>
  </div>
</div>