注文履歴詳細


<table class="table table-bordered">
  <tr>
    <th>購入者</th>
    <td><%= Customer.find(@order.customer_id).family_name + Customer.find(@order.customer_id).first_name %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= @order.shipping_post_code %> <%= @order.shipping_address %></br>
	    <%= @order.shipping_address_name %>
    </td>
  </tr>
  <tr>
    <th>支払い方法</th>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td>
      <%= form_with model: @order do |f| %>
          <% f.text_field :order_status %>
           <%= f.select :order_status, [ ["入金待ち","0"], ["入金確認","1"], ["製作中","2"], ["発送準備中","3"], ["発送済み","4"] ] %>
          <%= f.submit "更新" %>
      <% end %>
    </td>
  </tr>
</table>



<table class="table table-bordered">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @order_details.each do |order_detail| %>
   <tr>
    <td><%= Item.find(order_detail.item_id).name %></td>
    <td><%= order_detail.purchase_price %></td>
    <td><%= order_detail.quantity %></td>
    <td><%= order_detail.purchase_price * order_detail.quantity %></td>
    <td><%= order_detail.production_status_i18n %></td>
    <td>
      <!--f.select :production_status, options_from_collection_for_select(OrderDetail.all, :production_status_was)-->
      <div class="form-group">
        <input type="submit" name="commit" value="更新" class="btn btn-secondary" data-disable-with="Update User">
      </div>
    </td>
   </tr>
  <% end %>
  </tbody>
</table>

<table class="table table-bordered">
  <tr>
    <th>商品合計</th>
    <td><%= number_to_currency(@order.total_payment - @order.shipping_charge) %></td>
  </tr>
  <tr>
    <th>送料</th>
    <td><%= number_to_currency(@order.shipping_charge) %></td>
  </tr>
  <tr>
    <th>請求金額合計</th>
    <td><%= number_to_currency(@order.total_payment) %></td>
  </tr>
</table>
