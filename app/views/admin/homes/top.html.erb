<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<table class="table table-hover table-inverse">
  <thead>
    <h2>注文履歴一覧</h2>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
   <tr>
    <td><%= link_to order.created_at, admin_order_path(order.id) %></td>
    <td><%= Customer.find(order.customer_id).family_name + Customer.find(order.customer_id).first_name %></td>
    <td><%= OrderDetail.where(order_id: order.id).sum(:quantity) %></td>
    <td><%= order.order_status_i18n %></td>
   </tr>
  <% end %>
  </tbody>
</table>

    </div>
  </div>
</div>
<%= paginate @orders %>