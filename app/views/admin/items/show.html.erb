<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h2>商品詳細</h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-4 d-flex justify-content-center">
      <% if @item.image.present? %>
        <div class=""><%= image_tag @item.image, width: 'auto', height: '200px' %></div>
      <% else %>
        <%= image_tag 'no_image.jpg', width: 'auto', height: '200px'  %>
      <% end %>
    </div>

   <div class="col-8">
      <div class="form-group form-inline">
        <label class="col-4 col-form-label">商品名</label>
        <%= @item.name %>
      </div>

      <div class="form-group form-inline">
        <label class="col-4 col-form-label">商品説明</label>
        <%= @item.description %>
      </div>

      <div class="form-group form-inline">
        <label class="col-4 col-form-label">ジャンル</label>
        <%= @item.genre.name %></td>
      </div>

      <div class="form-group form-inline">
        <label class="col-4 col-form-label">税込価格</br>（税抜価格）</label>
        <%= @price.to_s(:delimited) %>(<%= @item.tax_excluded_price.to_s(:delimited) %>)円
      </div>

      <div class="form-group form-inline">
        <label class="col-4 col-form-label">販売ステータス</label>
          <% if @item.sales_status == true %>
            <p class="text-success">販売中</p>
          <% else %>
            <p class="text-secondary">販売停止中</p>
          <% end %>
      </div>

      <div class="mx-auto d-block">
        <%= link_to edit_admin_item_path(@item.id) do %>
          <div class="btn btn-success">編集する</div>
        <% end %>
      </div>

    </div>
  </div>
</div>
