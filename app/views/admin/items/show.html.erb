<h2>商品詳細</h2>

<table>

  <tr>
  <% if @item.image.present? %>
    <%= image_tag @item.image, size:'100x100' %>
  <% else %>
    <%= image_tag 'no_image.jpg' %>
  <% end %>
  </tr>

  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>

  <tr>
    <td>商品説明</td>
    <td><%= @item.description %></td>
  </tr>

  <tr>
    <td>ジャンル</td>
    <td><%= @item.genre.name %></td>
  </tr>

  <tr>
    <td>税込価格</br>（税抜価格）</td>
    <td> <%= @price.to_s(:delimited) %>(<%= @item.tax_excluded_price.to_s(:delimited) %>)円</td>
  </tr>

  <tr>
    <td>販売ステータス</td>
    <td>
      <% if @item.sales_status == true %>
        <p class="text-success">販売中</p>
      <% else %>
        <p class="text-secondary">販売停止中</p>
      <% end %>
      </td>
  </tr>

  <th>
    <%= link_to edit_admin_item_path(@item.id) do %>
      <div class="btn btn-sm btn-success">編集する</div>
    <% end %>
  </th>

</table>
