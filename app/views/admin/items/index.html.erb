<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10">
      <h2>商品一覧</h2>
    </div>
    <div class="col-md-2　float-right">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus fa-3x"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12  mx-auto">
　　　<%= render 'errors', item: @item %>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>
          <% @items.each do |item| %>
           <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to item.name, admin_item_path(item) %>
            </td>
            <td><%= item.tax_excluded_price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.sales_status == true %>
                <p class="text-success">販売中</p>
                <% else %>
                <p class="text-secondary">販売停止中</p>
              <% end %>
            </td>
           </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
  <%= paginate @items %>
</div>