<h2>ジャンル一覧・追加</h2>

    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div class="create">
        <p>ジャンル名</p>
        <%= f.text_field :name, placeholder:"ジャンル名" %>
      </div>

      <div class="form-group">
        <input type="submit" name="commit" value="新規登録" class="btn btn-success" data-disable-with="新規登録">
      </div>
    <% end %>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @genres.each do |genre| %>
   <tr>
    <td><%= genre.name %></td>
    <td>
      <%= link_to edit_admin_genre_path(genre.id) do %>
       <div class="btn btn-sm btn-success">編集する</div>
      <% end %>
    </td>
   </tr>
  <% end %>
  </tbody>

</table>