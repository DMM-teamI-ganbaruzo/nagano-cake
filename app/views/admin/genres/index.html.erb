<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>ジャンル一覧・追加</h2>

<table>
  <td>ジャンル名</td>

  <td>
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <%= f.text_field :name, placeholder:"ジャンル名" %>
    <% end %>
  </td>

  <td>
    <input type="submit" name="commit" value="新規登録" class="btn btn-success" data-disable-with="新規登録">
  </td>
</table>

<div class="col-5">
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @genres.each do |genre| %>
   <tr>
    <td><%= genre.name %></td>
    <td>
      <%= link_to edit_admin_genre_path(genre.id) do %>
       <div class="btn btn-sm btn-success">編集する</div>
      <% end %>
    </td>
   </tr>
  <% end %>
  </tbody>

</table>
</div>