<div class="container">
  <div class="row">
    <div class="col-10 mt-5">
<h2>会員一覧</h2>

<table class="table table-hover table-inverse col-10 mt-4 mx-auto">
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <% @customers.each do |customer| %>
  <tr>
    <td><%= customer.id %></td>
    <td>
      <%= link_to admin_customer_path(customer.id) do %>
        <%= customer.family_name + customer.first_name %>
      <% end %>
    </td>
    <td><%= customer.email %></td>
    <td>
      <% if customer.delete_status? %>
        無効
      <% else %>
        有効
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
  <div class="row justify-content-start">
    <div class="col-4 mx-auto">
      <%= paginate @customers %>
    </div>
  </div>

