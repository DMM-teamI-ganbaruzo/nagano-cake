<div class="container">
  <div class="row">
    <div class="col-10 mt-5 mx-auto">
      <h2><%= @customer.family_name + @customer.first_name %>さんの会員情報編集</h2>

    <%= form_with model: @customer, url: admin_customer_path do |f| %>
      <table class="mt-5" style="border:none;">
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td>
              <%= f.text_field :family_name %>
              <%= f.text_field :first_name %>
            </td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>
              <%= f.text_field :family_name_kana %>
              <%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :post_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.telephone_field :phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :delete_status, false %>
                <%= f.label :delete_status, "有効" %>
              <%= f.radio_button :delete_status, true %>
                <%= f.label :delete_status, "退会" %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td>
              <%= f.submit "変更を保存", class: 'btn btn-success' %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>