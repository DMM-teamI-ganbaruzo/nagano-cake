<%= @customer.family_name + @customer.first_name %>さんの会員情報編集

<table class="table table-bordered">
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <tr>
    <th>氏名</th>
    <td>
      <%= f.text_field :family_name %>
      <%= f.text_field :first_name %>
    </td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td>
      <%= f.text_field :family_name_kana %>
      <%= f.text_field :first_name_kana %>
    </td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= f.text_field :post_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= f.telephone_field :phone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.email_field :email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td>
      <%= f.radio_button :delete_status, "false" %>
        <%= f.label :delete_status, "有効" %>
      <%= f.radio_button :delete_status, "true" %>
        <%= f.label :delete_status, "退会" %>

    </td>
  </tr>
</table>

  <div class="form-group">
    <%= f.submit "変更を保存", class: 'btn btn-secondary' %>
  </div>
  <% end %>

