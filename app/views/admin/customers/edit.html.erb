<%= @customer.family_name + @customer.first_name %>さんの会員情報編集

<table class="table table-bordered">
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <div class="form-group">
    氏名
    <%= f.text_field :family_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-group">
    フリガナ
    <%= f.text_field :family_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="form-group">
    郵便番号
    <%= f.text_field :post_code %>
  </div>

  <div class="form-group">
    住所
    <%= f.text_field :address %>
  </div>

  <div class="form-group">
    電話番号
    <%= f.telephone_field :phone_number %>
  </div>
  <div class="form-group">
    メールアドレス
    <%= f.email_field :email %>
  </div>
</table>

  <div class="form-group">
    <%= f.submit "編集内容を保存", class: 'btn btn-secondary' %>
  </div>
<% end %>

