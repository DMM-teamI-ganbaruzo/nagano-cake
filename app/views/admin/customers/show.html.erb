<div class="container">
  <div class="row">
    <div class="col-md-10">

<%= @customer.family_name + @customer.first_name %>さんの会員詳細

<table class="table table-bordered">
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @customer.family_name + "　" + @customer.first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= @customer.family_name_kana + "　" + @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.post_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.phone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td>
      <% if @customer.delete_status? %>
        無効
      <% else %>
        有効
      <% end %>
    </td>
  </tr>
</table>

<%= link_to "編集する", edit_admin_customer_path(@customer.id) %>

